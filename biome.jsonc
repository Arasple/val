{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**/*",
      "!bun.lock",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!packages/ui/src/**/*"
    ]
  },
  "javascript": {
    "globals": ["$", "_", "Bun"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "nursery": {
        "noAwaitInLoop": "off"
      }
    }
  }
}
